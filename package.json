{
  "name": "svg-bbox",
  "version": "1.0.12",
  "description": "A set of tools to compute and to use a SVG bounding box you can trust (as opposed to the unreliable .getBBox() scourge)",
  "type": "module",
  "main": "./SvgVisualBBox.js",
  "browser": "./SvgVisualBBox.js",
  "unpkg": "./SvgVisualBBox.min.js",
  "jsdelivr": "./SvgVisualBBox.min.js",
  "exports": {
    ".": {
      "browser": "./SvgVisualBBox.js",
      "import": "./SvgVisualBBox.js",
      "default": "./SvgVisualBBox.js"
    },
    "./min": {
      "default": "./SvgVisualBBox.min.js"
    }
  },
  "bin": {
    "svg-bbox": "svg-bbox.cjs",
    "sbb-getbbox": "sbb-getbbox.cjs",
    "sbb-chrome-getbbox": "sbb-chrome-getbbox.cjs",
    "sbb-inkscape-getbbox": "sbb-inkscape-getbbox.cjs",
    "sbb-extract": "sbb-extract.cjs",
    "sbb-chrome-extract": "sbb-chrome-extract.cjs",
    "sbb-inkscape-extract": "sbb-inkscape-extract.cjs",
    "sbb-svg2png": "sbb-svg2png.cjs",
    "sbb-fix-viewbox": "sbb-fix-viewbox.cjs",
    "sbb-comparer": "sbb-comparer.cjs",
    "sbb-test": "sbb-test.cjs",
    "sbb-inkscape-text2path": "sbb-inkscape-text2path.cjs",
    "sbb-inkscape-svg2png": "sbb-inkscape-svg2png.cjs"
  },
  "files": [
    "SvgVisualBBox.js",
    "SvgVisualBBox.min.js",
    "svg-bbox.cjs",
    "sbb-*.cjs",
    "browser-utils.cjs",
    "version.cjs",
    "config/",
    "lib/",
    "assets/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Emasoft/SVG-BBOX.git"
  },
  "bugs": {
    "url": "https://github.com/Emasoft/SVG-BBOX/issues"
  },
  "homepage": "https://github.com/Emasoft/SVG-BBOX#readme",
  "keywords": [
    "svg",
    "bounding-box",
    "bbox",
    "puppeteer",
    "visual-bounds",
    "svg-tools",
    "headless-chrome",
    "svg-extraction",
    "svg-export",
    "svg-render",
    "sprite-sheet",
    "inkscape",
    "text-to-path",
    "svg-to-png",
    "cli",
    "browser",
    "cdn",
    "umd",
    "minified"
  ],
  "author": "Emasoft",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "node scripts/build-min.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:selective": "node scripts/test-selective.cjs",
    "test:since-commit": "node scripts/test-selective.cjs HEAD~1",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "ci": "pnpm run lint && pnpm run typecheck && pnpm run test:coverage && pnpm run test:e2e",
    "install-browsers": "playwright install --with-deps chromium && npx puppeteer browsers install chrome",
    "version": "node version.cjs",
    "version:bump:patch": "node scripts/bump-version.cjs patch",
    "version:bump:minor": "node scripts/bump-version.cjs minor",
    "version:bump:major": "node scripts/bump-version.cjs major",
    "version:bump": "node scripts/bump-version.cjs",
    "prepublishOnly": "npm run build && node scripts/validate-build.cjs && npm run lint && npm run typecheck && npm exec vitest run tests/integration/package-installation.test.js"
  },
  "dependencies": {
    "chrome-launcher": "^1.1.2",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.31.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.14.0",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.2.0",
    "prettier": "^3.7.1",
    "terser": "^5.44.1",
    "typescript": "^5.5.0",
    "vitest": "^4.0.14"
  }
}
